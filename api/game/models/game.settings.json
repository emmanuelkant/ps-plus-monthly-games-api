{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Game",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "PS4",
        "PS5"
      ],
      "default": "PS4",
      "required": true
    }
  }
}
